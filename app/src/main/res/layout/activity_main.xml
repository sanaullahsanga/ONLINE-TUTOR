<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.constructors.RegisterLogin.MainActivity">

    <ImageView
      android:layout_width="wrap_content"
        android:layout_height="323dp"
        android:src="@drawable/appimg2"

        />


    <Button
        android:id="@+id/AR"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/newbutton"
        android:padding="20dp"
        android:text="Log In"
        android:textColor="#332"
        android:drawableStart="@drawable/loginbtn"
        android:textSize="20sp"
        android:drawableLeft="@drawable/loginbtn" />

    <Button
        android:id="@+id/RN"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/newbutton"
        android:padding="20dp"
        android:drawableLeft="@drawable/register"
        android:text="Register Now"
        android:textColor="#332"
        android:textSize="20sp" />
</LinearLayout>