<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.constructors.RegisterLogin.Signup"

    >

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="4dp"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#08E91E63"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Sign Up"
                android:textColor="#DD2E4C"
                android:textSize="25sp"
                android:textStyle="bold" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <EditText
                android:background="@drawable/textfieldbackgroud"
                android:id="@+id/getname_signup"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="First Name" />

            <EditText
                android:background="@drawable/textfieldbackgroud"
                android:id="@+id/getLastname_signup"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Last Name" />

        </LinearLayout>

            <EditText
                android:background="@drawable/textfieldbackgroud"
                android:id="@+id/getemail_signup"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:hint="Email"
                android:inputType="textEmailAddress"/>

            <EditText
                android:background="@drawable/textfieldbackgroud"
                android:id="@+id/getpassword_signup"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:hint="Password"
                android:inputType="textPassword"/>
            <EditText
                android:background="@drawable/textfieldbackgroud"
                android:id="@+id/getconfirmpassword_signup"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"/>

            <Button
                android:id="@+id/stud1"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/newbutton"
                android:layout_gravity="center_horizontal"
                android:padding="15dp"
                android:text="Register"
                android:textSize="20sp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />




</LinearLayout>

