<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#1D3ABBDB"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="ContactNo."
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/contactRV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="20dp"
                android:text="*"
                android:textSize="16sp" />

        </LinearLayout>




            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:textSize="16sp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Name" />

                <TextView
                    android:id="@+id/nameRV"
                    android:textSize="16sp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="*"
                    />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:textSize="16sp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Address" />

                <TextView
                    android:id="@+id/addressRV"
                    android:textSize="16sp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="*"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:textSize="16sp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Qualification" />

                <TextView
                    android:id="@+id/qualificationRV"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="*"
                    />

            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:textSize="16sp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Experience" />

                <TextView
                    android:id="@+id/experienceRV"
                    android:textSize="16sp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="*"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/uidRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/showTutorProfile"
                android:layout_width="150dp"
                android:layout_height="50dp"
               android:background="@drawable/newbutton"
                android:text="Show Profile"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"/>



        </LinearLayout>



    </androidx.cardview.widget.CardView>




</LinearLayout>



