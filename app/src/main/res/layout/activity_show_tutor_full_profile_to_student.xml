<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.constructors.Student.ShowTutorFullProfileToStudent">



    <androidx.cardview.widget.CardView
        app:cardCornerRadius="30dp"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:backgroundTint="#f1f5f8"
        android:layout_margin="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:weightSum="4"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#27E91E63">


        <ImageView
            android:id="@+id/call"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:src="@drawable/call_icon" />

            <ImageView
                android:id="@+id/whatsapp"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:src="@drawable/whatsapp_icon"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#27E91E63"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Name" />

                <TextView
                    android:id="@+id/nameTVS"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_weight="2"
                    android:paddingLeft="20dp"
                    android:text="*"
                    />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:textSize="16sp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="ContactNo." />

                <TextView
                    android:id="@+id/contactTVS"
                    android:textSize="16sp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="*"
                    />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:textSize="16sp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Address" />

                <TextView
                    android:id="@+id/addressTVS"
                    android:textSize="16sp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="*"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:textSize="16sp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Qualification" />

                <TextView
                    android:id="@+id/qualificationTVS"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="*"
                    />

            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:textSize="16sp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Experience" />

                <TextView
                    android:id="@+id/experienceTVS"
                    android:textSize="16sp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="*"
                    />

            </LinearLayout>

            <TextView
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="start"
                android:textSize="20sp"
                android:textColor="#02243C"

                android:text="I can Teach Classes and Subjects" />


            <ListView
                android:id="@+id/listviewTutorProfileS"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:divider="#CCCCCC"
                android:dividerHeight="1dp"
               android:paddingLeft="2dp"

               >
            </ListView>
        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>
